<Window x:Class="DiffChecker.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiffChecker"
        mc:Ignorable="d"
        Title="Settings" WindowStyle="None" ResizeMode="NoResize" Height="160" Width="300">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <TextBlock VerticalAlignment="Center" Margin="5,0,0,0" Text="Settings" Grid.Row="0"/>
            <DockPanel Grid.Row="1">
                <Border DockPanel.Dock="Top" BorderBrush="Black" BorderThickness="0.4"/>
                <StackPanel>
                    <ComboBox Margin="5,10,5,5" SelectedIndex="0" Style="{x:Null}" VerticalAlignment="Top" Height="30" ItemsSource="{Binding FontItems}"/>
                    <ComboBox Margin="5" SelectedIndex="0" Style="{x:Null}" VerticalAlignment="Top" Height="30" ItemsSource="{Binding FontSizes}"/>
                    <Button BorderBrush="Green" Background="Green" Margin="5,10,5,5" Content="Apply"/>
                </StackPanel>
            </DockPanel>
        </Grid>
    </Border>
</Window>
